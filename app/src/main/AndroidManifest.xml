<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.king.mynai">
    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_dice"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dice"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LottoActivity"></activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".BonusSpinActivity" />
        <activity android:name=".PopUp2Activity" />
        <activity
            android:name=".PopUp1Activity"
            android:label="@string/title_activity_pop_up1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Spiner4Activity" />
        <activity android:name=".Spiner3Activity" />
        <activity android:name=".Spiner2Activity" />
        <activity android:name=".Spiner1Activity" />
        <activity
            android:name=".AddActivity"
            android:label="@string/title_activity_add"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".GalleryActivity" />
        <activity
            android:name=".SpinerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PicOneActivity"
            android:label="@string/title_activity_pic_one"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PickOne" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>